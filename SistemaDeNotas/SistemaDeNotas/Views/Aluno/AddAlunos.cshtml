@model SistemaDeNotas.Models.Aluno
<br />
<img width="200px" height="200px" src="~/Imagens/pessoa.jpg" />

<form class="formulario" method="post" asp-action="AddAlunos">

    <h1>Adicionar Aluno</h1>

    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input class="form-control" asp-for="Nome" />
    </div>

    <div class="form-group">
        <label asp-for="CPF">CPF</label>
        <input class="form-control" asp-for="CPF" />
    </div>

    <div class="form-group">
        <label asp-for="Endereco">Endereço</label>
        <input class="form-control" asp-for="Endereco" />
    </div>

    <div class="form-group">
        <label asp-for="Faltas">Faltas</label>
        <input class="form-control" asp-for="Faltas" />
    </div>

    <div class="form-group">
        <label asp-for="Desistente">Desistente</label>
        <select  asp-for="Desistente">
            <option value="True">Sim</option>
            <option value="False">Não</option>
        </select>
        
        
    </div>

    <input class="btn btn-info" type="submit" value="Salvar Nota" />

</form>
